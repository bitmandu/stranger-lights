#!/bin/bash
# Search Twitter and send results to serial.py. Uses twurl[1] to
# search the Twitter API[2].
#
# [1]: https://github.com/twitter/twurl
# [2]: https://developer.twitter.com/en/docs/tweets/search/api-reference/get-search-tweets

HASHTAG="%23StrangerThings"  # = %23
LOGFILE=".since_id"
USERFILE="users.txt"

while true; do
    since_id=`cat $LOGFILE`
    timestamp=`date`

    echo "##################################################"
    echo "$timestamp ($since_id)"
    echo "##################################################"

    twurl "/1.1/search/tweets.json?q=${HASHTAG}&result_type=recent&since_id=${since_id}" | ./serial.py -l $LOGFILE -t -u $USERFILE

    echo
    sleep 10s  # 180 requests / 15-min window
done
